:root {
  --bg: #0b1020;
  --table: #0f1a3b;
  --accent: #ffd54a;
  --text: #e6eaff;
  --muted: #94a3b8;
}
* { box-sizing: border-box; }
html, body, #root { height: 100%; }
body {
  margin: 0;
  background: var(--bg);
  color: var(--text);
  font-family: system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
}
.app {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16px;
  padding-bottom: calc(16px + env(safe-area-inset-bottom));
  gap: 12px;
}
.title { margin-top: 6px; letter-spacing: 0.5px; font-weight: 700; }
.table {
  width: 100%; max-width: 540px;
  background: linear-gradient(180deg, #14224f, var(--table));
  border: 2px solid #1f2a5a;
  border-radius: 14px;
  padding: 12px;
  box-shadow: 0 8px 30px rgba(0,0,0,0.35);
}
.cards { display: grid; grid-template-columns: repeat(5, 1fr); gap: 10px; margin-top: 8px; }
.card {
  aspect-ratio: 5/7;
  border-radius: 10px; background: white; color: black;
  display: flex; align-items: center; justify-content: center;
  font-weight: 700; font-size: 1.6rem;
  position: relative; user-select: none; touch-action: manipulation;
}
.holdTag {
  position: absolute; bottom: 6px; left: 50%; transform: translateX(-50%);
  background: var(--accent); color: black; padding: 2px 8px; border-radius: 999px;
  font-size: 0.8rem; letter-spacing: .5px;
}
.controls { display: flex; gap: 8px; flex-wrap: wrap; margin-top: 10px; }
button {
  background: #1a285c; border: 1px solid #31408a; color: white;
  padding: 10px 14px; border-radius: 10px; font-weight: 600;
}
button:disabled { opacity: .6 }
.row { display: flex; justify-content: space-between; gap: 8px; }
.payouts { margin-top: 8px; font-size: 1.2rem; color: var(--muted); }

/* --- suits in red for hearts/diamonds --- */
.card.red { color: #d32f2f; }

/* --- paytable styles --- */
.paytable {
  margin-top: 12px;
  width: 100%;
  border-collapse: collapse;
  font-size: 0.9rem;
  background: rgba(255,255,255,0.04);
  border-radius: 10px;
  overflow: hidden;
}
.paytable th, .paytable td {
  padding: 6px 8px;
  border-bottom: 1px solid rgba(255,255,255,0.08);
  text-align: right;
}
.paytable th:first-child, .paytable td:first-child {
  text-align: left;
  color: var(--text);
  white-space: nowrap;
}
.paytable thead th {
  font-weight: 700;
  color: var(--text);
  background: rgba(255,255,255,0.06);
}
.paytable td.active, .paytable th.active {
  background: rgba(255, 213, 74, 0.18);
  font-weight: 700;
}

/* layout */
.layout {
  display: grid;
  grid-template-columns: 1fr minmax(260px, 320px);
  gap: 14px;
  width: 100%;
  max-width: 900px;
}
@media (max-width: 820px) {
  .layout { grid-template-columns: 1fr; }
}

.panel {
  background: linear-gradient(180deg, #16224a, #0f1a3b);
  border: 2px solid #1f2a5a;
  border-radius: 14px;
  padding: 12px;
  box-shadow: 0 8px 30px rgba(0,0,0,0.35);
}
.panel h3 {
  margin: 0 0 8px 0;
  font-size: 1rem;
}
.panel .row { margin-bottom: 6px; }
.panel small { opacity: .7; }
.table { margin-bottom: 12px; }

/* coaching prompt modal */
.modal {
  position: fixed; inset: 0;
  background: rgba(0,0,0,0.55);
  display: flex; align-items: center; justify-content: center;
  padding: 16px; z-index: 50;
}
.modalBox {
  background: #0f1a3b; border: 2px solid #1f2a5a;
  border-radius: 12px; padding: 14px; max-width: 520px; width: 100%;
  box-shadow: 0 18px 60px rgba(0,0,0,0.45);
}
.modal h4 { margin: 0 0 8px 0; }
.modal .hintCards { display: grid; grid-template-columns: repeat(5, 1fr); gap: 8px; margin: 10px 0; }
.modal .hintCard { aspect-ratio: 5/7; background: white; color: black; border-radius: 10px;
  display:flex; align-items:center; justify-content:center; font-weight: 700; }
.modal .hintCard.keep { outline: 3px solid #008000; }
/* make red suits red inside the modal */
.modal .hintCard.red { color: #d32f2f; }

/* --- Bigger game action buttons --- */
.controls button {
  font-size: 1.25rem;   /* bigger text (20px-ish) */
  padding: 12px 20px;   /* bigger hit area */
  min-width: 90px;      /* make buttons wider */
  border-radius: 8px;   /* round corners */
  font-weight: 600;     /* bold text */
}

.controls button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}
