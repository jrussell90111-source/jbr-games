/* Grey pulse when Bet One wraps 5 → 1 */
.betOneBtn.is-pulsing {
  animation: betOnePulse 240ms ease-out;
}

@keyframes betOnePulse {
  0%   { box-shadow: 0 0 0 0 rgba(255,255,255,0.00); background:#1a285c; transform: translateZ(0) scale(1); }
  45%  { box-shadow: 0 0 0 6px rgba(255,255,255,0.14); background:#223067; transform: translateZ(0) scale(0.985); }
